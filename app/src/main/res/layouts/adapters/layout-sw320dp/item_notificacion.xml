<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="#FFF">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:contentDescription=""
        android:src="@drawable/ic_action_collapse" />

    <ImageView
        android:id="@+id/imageViewVisto"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:contentDescription=""
        android:src="@drawable/ic_brightness_1_grey_500_18dp"
        android:visibility="visible"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="6sp"
        android:layout_toStartOf="@id/imageView1"
        android:layout_toEndOf="@id/imageViewVisto"
        android:gravity="center|start"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="center|start"
            android:text=""
            android:textColor="#f3f3"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txtFechaEnviado"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center|start"
            android:text=""
            android:textColor="#333"
            android:textSize="12sp"
            android:textStyle="normal" />


        <TextView
            android:id="@+id/txtMensaje"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="start"
            android:text=""
            android:textColor="#000"
            android:textSize="13sp"
            android:textStyle="normal" />

    </LinearLayout>


</RelativeLayout>